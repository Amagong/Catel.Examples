<catel:UserControl x:Class="Catel.Examples.DisplayProgress.Views.CustomProgressControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:catel="http://catel.codeplex.com" FontSize="10" HorizontalAlignment="Stretch">
    <Grid>
        <ProgressBar Margin="5" Height="18" HorizontalAlignment="Stretch" Name="progressBar1" Value="{Binding Percentage}"   />
        <TextBlock Margin="10" Text="{Binding DetailedMessage}" Height="28" HorizontalAlignment="Stretch" Name="label1" VerticalAlignment="Top" FontStyle="Italic" />
    </Grid>
</catel:UserControl>
