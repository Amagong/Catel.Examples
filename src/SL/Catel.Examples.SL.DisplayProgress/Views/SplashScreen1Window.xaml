<catel:DataWindow x:Class="Catel.Examples.DisplayProgress.Views.SplashScreen1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:catel="http://catel.codeplex.com" 
        FontSize="10" >
    <Grid>
        <Image Name="image1" Source="./../Images/Background.png" Width="440" />
        <StackPanel Margin="5,189,0,33">
            <TextBlock Margin="5" Text="{Binding DetailedMessage}" Height="22" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" FontStyle="Italic" />
            <ProgressBar Margin="5" HorizontalAlignment="Stretch" x:Name="progressBar1" Value="{Binding Percentage}" Height="14"  />
        </StackPanel>
    </Grid>
    </catel:DataWindow>
